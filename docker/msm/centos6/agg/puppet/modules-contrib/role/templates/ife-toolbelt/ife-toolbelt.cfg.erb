#
# The ife-toolbelt configuration file.
# This file was generated by puppet and written to /etc/ife-toolbelt.conf
#

# ----------------------------
# ife-compute-tls properties
# ----------------------------

# CA root alias
ife.compute.tls.pki.root.alias.CA=<%= @alias_ca %>

# file path for all the pki data
ife.compute.tls.pki.path=<%= @path %>

# combined keystore and private key password
ife.compute.tls.pki.combined.password=<%= @combined_password %>

# truststore password
ife.compute.tls.pki.truststore.password=<%= @truststore_password %>

# CSR SCEP challenge password (enrollment code)
# This must be the same for the username in EJBCA that you are enrolling with. For example
# CN=n1.web.be.msm.internal == username name of web.be.msm.internal created automatically
# in EJBCA from the new ETCD entry as container n1.web.be.msm.internal (dropping the n1)
# as we are using wildcard certs, i.e. *.web.be.msm.internal.
ife.compute.tls.pki.challenge.password=<%= @challenge_password %>

# combined CSS and CSR encryption algorithm
ife.compute.tls.pki.combined.algorithm=<%= @combined_algorithm %>

# RSA keys size, 2048 or 4096
ife.compute.tls.pki.rsa.key.size=<%= @key_size %>

# Certifcate valid days
ife.compute.tls.pki.cert.days=<%= @cert_days %>

# Certifcate Org. (CN=endpoint URL hostname)
ife.compute.tls.pki.cert.CN=<%= @x509_cn %>
ife.compute.tls.pki.cert.OU=<%= @x509_ou %>
ife.compute.tls.pki.cert.O=<%= @x509_o %>
ife.compute.tls.pki.cert.L=<%= @x509_l %>
ife.compute.tls.pki.cert.S=<%= @x509_s %>
ife.compute.tls.pki.cert.C=<%= @x509_c %>

# ----------------------------
# SCEP client properties
# ----------------------------

# URL to EJBA SCEP interface
ife.scep.client.ejbca.url=<%= @ejbca_url %>

# The name of our CA created in ejbca
ife.scep.client.ejbca.CA=<%= @ejbca_ca %>

